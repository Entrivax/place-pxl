{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2021",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
    },
    "include": ["src/**/*", "typings"],
    "exclude": ["front"],
    "lib": [
        "es2021"
    ]
}